            android:exported="true"
            android:theme="@style/Theme.IFUnsoedMobile"> <!-- TEMA SPLASH SCREEN DITAMBAHKAN DI SINI -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true" /> <!-- TEMA SPLASH SCREEN DIHAPUS DARI SINI -->

        <activity
            android:name=".Halaman2Activity"
            android:exported="false" />

